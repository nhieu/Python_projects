from random import randint

board = []
board_length = 10

for x in range(board_length):
    board.append(["O"] * board_length)

def print_board(board):
    for row in board:
        print " ".join(row)

print "Let's play Battleship!"
print_board(board)

def random_row(board):
    return randint(0, len(board) - 1)

def random_col(board):
    return randint(0, len(board[0]) - 1)

# creating a submarine (2 spaces) 
def make_sub(board):
    
    ship_row = random_row(board)
    ship_col = random_col(board)

    hor_vert = randint(0,1)

    # if hor_vert == 0 then its a vertical sub
    if hor_vert ==0:
        if ship_row == 9:
#            print ship_row
            ship_row_array = [ship_row, ship_row -1]
            ship_col_array = [ship_col,ship_col]
        elif ship_row == 0:
#            print ship_row
            ship_row_array = [ship_row, ship_row + 1]
            ship_col_array = [ship_col,ship_col]   
        else:
#            print ship_row
            ship_row_array = [ship_row, ship_row -1]
            ship_col_array = [ship_col,ship_col]
            
   # if hor_vert == 1 then its a horizontal sub
    if hor_vert == 1:
        if ship_col == 9:
 #           print ship_col
            ship_col_array = [ship_col, ship_col-1]
            ship_row_array = [ship_row,ship_row]
        elif ship_col == 0 :
 #           print ship_col
            ship_col_array = [ship_col, ship_col+1]
            ship_row_array = [ship_row,ship_row]
        else:
 #           print ship_col
            ship_col_array = [ship_col,ship_col -1]
            ship_row_array = [ship_row,ship_row]

    sub_coord = {'row' : ship_row_array, 'col': ship_col_array}
    
    return sub_coord

# creating a cruiser (takes up 3 spaces)

def make_cruiser(board):
    ship_row = random_row(board)
    ship_col = random_col(board)

    hor_vert = randint(0,1)

    # if hor_vert == 0 then its a vertical cruiser
    if hor_vert ==0:
        if ship_row == 9:
#            print ship_row
            ship_row_array = [ship_row, ship_row -1, ship_row -2]
            ship_col_array = [ship_col,ship_col,ship_col]
        elif ship_row == 0:
#            print ship_row
            ship_row_array = [ship_row, ship_row +1, ship_row +2]
            ship_col_array = [ship_col,ship_col,ship_col]   
        else:
#            print ship_row
            ship_row_array = [ship_row, ship_row -1, ship_row +1]
            ship_col_array = [ship_col,ship_col,ship_col]
            
   # if hor_vert == 1 then its a horizontal cruiser
    if hor_vert == 1:
        if ship_col == 9:
#            print ship_col
            ship_col_array = [ship_col, ship_col-1, ship_col - 2]
            ship_row_array = [ship_row,ship_row, ship_row]
        elif ship_col == 0 :
#            print ship_col
            ship_col_array = [ship_col, ship_col+1, ship_col + 2]
            ship_row_array = [ship_row,ship_row, ship_row]
        else:
#            print ship_col
            ship_col_array = [ship_col,ship_col -1, ship_col +1]
            ship_row_array = [ship_row,ship_row, ship_row]

    cruiser_coord = {'row' : ship_row_array, 'col': ship_col_array}
    
    return cruiser_coord
       
cruiser_coord = make_cruiser(board)
sub_coord = make_sub(board)
print cruiser_coord.items()
print sub_coord.items()



def game(cruiser_coord, sub_coord, board_length):
    
    
    cruiser_col = cruiser_coord['col']
    cruiser_row = cruiser_coord['row']
    sub_col = sub_coord['col']
    sub_row = sub_coord['row']
    
    attempts = 4

    for turn in range(attempts):
        is_ship_hit = False
        print "Turn", turn + 1
        guess_row = int(raw_input("Guess Row:"))
        guess_col = int(raw_input("Guess Col:"))
 

    # checking if it hits the cruiser        
        for n in range(len(cruiser_coord['col'])) :            
            if guess_row == cruiser_row[n] and guess_col == cruiser_col[n]:
                board[guess_row][guess_col] = "H"
                del cruiser_col[n]
                del cruiser_row[n]
            
                if not cruiser_col:
                    print 'Congratulations! You sunk my cruiser!'
                    is_ship_hit = True
                    break 
                else:
                    print "Congratulations! You hit my cruiser!"
                    is_ship_hit = True
                    break
                
#checking if it hit the submarine
             
        for j in range(len(sub_coord['col'])):
            if guess_row == sub_row[j] and guess_col == sub_col[j]:
                board[guess_row][guess_col] = "H"
                del sub_col[j]
                del sub_row[j]
            
                if not sub_col:
                    print 'Congratulations! You sunk my submarine!'
                    is_ship_hit =True
                    break 
                else:
                    print "Congratulations! You hit my submarine!"
                    is_ship_hit =True 
                    break
                
        
        
        if (guess_row < 0 or guess_row > board_length) or (guess_col < 0 or guess_col > board_length):
            print "Oops, that's not even in the ocean."
        elif(board[guess_row][guess_col] == "X") and (is_ship_hit == False):
            print "You guessed that one already."
        elif(board[guess_row][guess_col] == "H") and (is_ship_hit ==False):
            print "You guessed that one already."
        elif(is_ship_hit == False):
            print "You missed my battleship!"
            board[guess_row][guess_col] = "X"
        if turn == attempts-1:
            print "Game Over"
    
        print_board(board)


game(cruiser_coord, sub_coord,board_length)
    

